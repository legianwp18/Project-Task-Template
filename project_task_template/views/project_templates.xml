<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_template_view_form" model="ir.ui.view">
            <field name="name">project.template.view.form</field>
            <field name="model">project.template</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="task_template_id"/>
                                <field name="start_date"/>
                            </group>
                        </group>
                        <footer>
                            <button string="Generate" name="generator_task" type="object" class="btn-primary" data-hotkey="q"/>
                            <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="z" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="project_template_action" model="ir.actions.act_window">
            <field name="name">Task Template</field>
            <field name="res_model">project.template</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            id="project_template_menu"
            name="Project Template"
            action="project_template_action"
            parent="project.menu_main_pm"
            sequence="10"/>
    </data>
</odoo>